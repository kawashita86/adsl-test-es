{% extends 'base.html.twig' %}

{% block stylesheetsDist %}
<style type="text/css">
    {% include 'public/styles/critical/index.css' ignore missing %}
</style>
<script>
    (function(u){function loadCSS(e,t,n){"use strict";function r(){for(var t,i=0;i<d.length;i++)d[i].href&&d[i].href.indexOf(e)>-1&&(t=!0);t?o.media=n||"all":setTimeout(r)}var o=window.document.createElement("link"),i=t||window.document.getElementsByTagName("script")[0],d=window.document.styleSheets;return o.rel="stylesheet",o.href=e,o.media="only x",i.parentNode.insertBefore(o,i),r(),o}for(var i in u){loadCSS(u[i]);}}(["{{ asset('styles/main.css') }}"]));
</script>
<noscript>
    <link rel="stylesheet" href="{{ asset('styles/main.css') }}">
</noscript>
{% endblock stylesheetsDist %}

{% block body %}

    <div class="section-basic">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="orange">I risultati del test effettuato il {{ adsl_speedtest.timestamp|date('d/m/Y') }}</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="section-padding speed-test-sample">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-6 col-xs-12 col-sm-12" id="data-wrapper">
                    <div id="provider" class="element">
                        <span class="label provider">Operatore</span>
                        <span id="speedo-provider" class="data"><img src="{{ asset('/img/brands/'~adsl_speedtest.Provider|lower~'.png') }}" /></span>
                    </div>
                    <div id="status" class="element">
                        <span class="label status">Citt&agrave;</span>
                        <span id="speedo-status" class="data">{{ adsl_speedtest.city }}</span>
                    </div>
                    <div id="ip" class="element">
                        <span class="label ip">IP</span>
                        <span id="speedo-ip" class="data">{{ adsl_speedtest.ipAddress }}</span>
                    </div>
                    <div id="results-area" class="clear">
                        <div id="download" class="bandwidth-circle">
                            <div class="results">
                                <em id="speedo-down" class="data">{{ adsl_speedtest.downloadSpeed|bandwidth_filter }}</em><br/>
                                <div class="label">Mbps Download</div>
                            </div>
                        </div>
                        <div id="upload" class="bandwidth-circle">
                            <div class="results">
                                <em id="speedo-up" class="data">{{ adsl_speedtest.uploadSpeed|bandwidth_filter }}</em><br/>
                                <div class="label">Mbps Upload</div>
                            </div>
                        </div>
                        <div id="ping">
                            <div class="results">
                                <b class="label">PING</b><em id="speedo-ping" class="data">{{ adsl_speedtest.ping }}</em><span class="metrics">ms</span><span class="label">PING</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
                </div>
            </div>
        </div>
    </div>
    <div class="section-alternative">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    {% include('partial/lastResults.html.twig') with {'activity': activity } %}
                </div>
                <div class="col-md-6">
                    {% include('partial/topProviders.html.twig') with {'top_providers': top_providers } %}
                </div>
            </div>
        </div>
    </div>
    <div class="section-padding">
        <div class="container">
            <div class="row">

            </div>
        </div>
    </div>
    
{% endblock %}
